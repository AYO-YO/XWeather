<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewStyle" parent="ViewStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:color">#222</item>
    </style>

    <style name="ImageViewStyle" parent="ViewStyle">
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="LineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:background">@color/middle_gray</item>
    </style>

    <style name="LayoutBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:background">@drawable/bg_bar_border</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="FeatureTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LayoutInFeatureStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

</resources>