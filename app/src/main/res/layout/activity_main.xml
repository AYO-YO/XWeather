<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <!--    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout-->
    <!--            android:id="@+id/main_swiper_pull_refresh"-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_height="wrap_content"-->
    <!--            android:scrollbars="none">-->

    <!--        <ListView-->
    <!--                android:layout_width="wrap_content"-->
    <!--                android:layout_height="wrap_content" />-->
    <!--    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>-->

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            tools:ignore="UseCompoundDrawables,UselessParent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_city"
                android:textSize="24sp"
                android:id="@+id/tv_wt_city" />

        <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_pull_arrow" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/middle_gray"
                android:text="更新于 " />

        <TextView
                android:id="@+id/tv_wt_update_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/middle_gray"
                android:text="14:00" />
    </LinearLayout>
    <!--分割线-->
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/light_gray" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/iv_wt_wt_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="30dp"
                android:src="@drawable/ic_icon_wushuju" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/test_weather_state"
                    android:id="@+id/tv_wt_weather_state" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:text="@string/weather" />

                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_zuigaoqiwen" />

                <TextView
                        android:id="@+id/tv_wt_high_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:text="15℃" />

                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_zuidiqiwen" />

                <TextView
                        android:id="@+id/tv_wt_low_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:text="5℃" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:id="@+id/tv_wt_current_temp"
                android:textSize="64sp"
                android:layout_marginStart="30dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:gravity="center" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="64sp"
                android:text="@string/degree"
                android:textStyle="bold"
                android:textAlignment="textStart" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:gravity="right"
                android:orientation="vertical"
                tools:ignore="RtlHardcoded">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="PM 2.5"
                    android:textSize="24sp" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:gravity="right">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="999"
                        android:id="@+id/tv_wt_pm25_num"
                        android:textSize="24sp" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:layout_marginStart="10dp"
                        android:id="@+id/tv_wt_pm25_state"
                        android:text="重度污染" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout style="@style/LayoutBarStyle">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textAlignment="center"
                android:text="预报" />

        <View style="@style/LineStyle" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

            <TextView
                    style="@style/TextViewStyle"
                    android:text="7:00"
                    android:id="@+id/tv_wt_1st_three" />

            <TextView
                    style="@style/TextViewStyle"
                    android:text="7:00"
                    android:id="@+id/tv_wt_2nd_three" />

            <TextView
                    style="@style/TextViewStyle"
                    android:text="7:00"
                    android:id="@+id/tv_wt_3rd_three" />

            <TextView
                    style="@style/TextViewStyle"
                    android:text="7:00"
                    android:id="@+id/tv_wt_4th_three" />

            <TextView
                    style="@style/TextViewStyle"
                    android:text="7:00"
                    android:id="@+id/tv_wt_5th_three" />

            <TextView
                    style="@style/TextViewStyle"
                    android:text="7:00"
                    android:id="@+id/tv_wt_6th_three" />

            <TextView
                    style="@style/TextViewStyle"
                    android:text="7:00"
                    android:id="@+id/tv_wt_7th_three" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                    style="@style/ImageViewStyle"
                    android:id="@+id/iv_wt_1st_three"
                    android:src="@drawable/ic_icon_wushuju" />

            <ImageView
                    style="@style/ImageViewStyle"
                    android:id="@+id/iv_wt_2nd_three"
                    android:src="@drawable/ic_icon_wushuju" />

            <ImageView
                    style="@style/ImageViewStyle"
                    android:id="@+id/iv_wt_3rd_three"
                    android:src="@drawable/ic_icon_wushuju" />

            <ImageView
                    style="@style/ImageViewStyle"
                    android:id="@+id/iv_wt_4th_three"
                    android:src="@drawable/ic_icon_wushuju" />

            <ImageView
                    style="@style/ImageViewStyle"
                    android:id="@+id/iv_wt_5th_three"
                    android:src="@drawable/ic_icon_wushuju" />

            <ImageView
                    style="@style/ImageViewStyle"
                    android:id="@+id/iv_wt_6th_three"
                    android:src="@drawable/ic_icon_wushuju" />

            <ImageView
                    style="@style/ImageViewStyle"
                    android:id="@+id/iv_wt_7th_three"
                    android:src="@drawable/ic_icon_wushuju" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    style="@style/TextViewStyle"
                    android:text="15℃"
                    android:id="@+id/tv_wt_1st_temp" />

            <TextView
                    style="@style/TextViewStyle"
                    android:text="15℃"
                    android:id="@+id/tv_wt_2nd_temp" />

            <TextView
                    style="@style/TextViewStyle"
                    android:text="15℃"
                    android:id="@+id/tv_wt_3rd_temp" />

            <TextView
                    style="@style/TextViewStyle"
                    android:text="15℃"
                    android:id="@+id/tv_wt_4th_temp" />

            <TextView
                    style="@style/TextViewStyle"
                    android:text="15℃"
                    android:id="@+id/tv_wt_5th_temp" />

            <TextView
                    style="@style/TextViewStyle"
                    android:text="15℃"
                    android:id="@+id/tv_wt_6th_temp" />

            <TextView
                    style="@style/TextViewStyle"
                    android:text="15℃"
                    android:id="@+id/tv_wt_7th_temp" />
        </LinearLayout>

        <View
                style="@style/LineStyle"
                android:layout_marginTop="10dp" />

        <LinearLayout style="@style/LayoutInFeatureStyle">

            <TextView
                    style="@style/FeatureTextStyle"
                    android:layout_weight="2"
                    android:text="今天" />

            <ImageView
                    android:id="@+id/iv_wt_feature_today_state"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_icon_wushuju" />

            <TextView
                    android:id="@+id/tv_wt_feature_today_high_temp"
                    style="@style/FeatureTextStyle"
                    android:text="18℃" />

            <TextView
                    android:id="@+id/tv_wt_feature_today_low_temp"
                    style="@style/FeatureTextStyle"
                    android:text="10℃" />
        </LinearLayout>

        <LinearLayout style="@style/LayoutInFeatureStyle">

            <TextView
                    style="@style/FeatureTextStyle"
                    android:layout_weight="2"
                    android:text="明天" />

            <ImageView
                    android:id="@+id/iv_wt_feature_tomorrow_state"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_icon_wushuju" />

            <TextView
                    android:id="@+id/tv_wt_feature_tmr_high_temp"
                    style="@style/FeatureTextStyle"
                    android:text="18℃" />

            <TextView
                    android:id="@+id/tv_wt_feature_tmr_low_temp"
                    style="@style/FeatureTextStyle"
                    android:text="10℃" />
        </LinearLayout>

        <LinearLayout style="@style/LayoutInFeatureStyle">

            <TextView
                    style="@style/FeatureTextStyle"
                    android:layout_weight="2"
                    android:text="后天" />

            <ImageView
                    android:id="@+id/iv_wt_feature_aftmr_state"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_icon_wushuju" />

            <TextView
                    android:id="@+id/tv_wt_feature_aftmr_high_temp"
                    style="@style/FeatureTextStyle"
                    android:text="18℃" />

            <TextView
                    android:id="@+id/tv_wt_feature_aftmr_low_temp"
                    style="@style/FeatureTextStyle"
                    android:text="10℃" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout style="@style/LayoutBarStyle">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textAlignment="center"
                android:text="详细信息" />

        <View style="@style/LineStyle" />


    </LinearLayout>
</LinearLayout>